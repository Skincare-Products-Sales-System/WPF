<Window x:Class="SPSS.WPF.ViewOrderHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Order History" 
        Height="600" 
        Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Your Order History"
                 FontSize="24"
                 FontWeight="Bold"
                 Margin="0,0,0,20"/>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="1.2*"/>
            </Grid.ColumnDefinitions>

            <!-- Orders List -->
            <Border Background="#f5f5f5" 
                    BorderBrush="#ddd" 
                    BorderThickness="1" 
                    CornerRadius="5">
                <ListView x:Name="OrdersListView" 
                         ItemsSource="{Binding Orders}"
                         SelectedItem="{Binding SelectedOrder}"
                         Margin="5">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Order ID" 
                                          DisplayMemberBinding="{Binding OrderId}" 
                                          Width="80"/>
                            <GridViewColumn Header="Date" 
                                          DisplayMemberBinding="{Binding OrderDate, StringFormat={}{0:dd/MM/yyyy}}" 
                                          Width="100"/>
                            <GridViewColumn Header="Total Amount" 
                                          DisplayMemberBinding="{Binding FinalAmount, StringFormat=C}" 
                                          Width="100"/>
                            <GridViewColumn Header="Status" 
                                          DisplayMemberBinding="{Binding Status}" 
                                          Width="80"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>

            <!-- Separator -->
            <GridSplitter Grid.Column="1" 
                         Width="5"
                         Margin="10,0"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Stretch"/>

            <!-- Order Details and Feedback -->
            <Border Grid.Column="2" 
                    Background="#f5f5f5" 
                    BorderBrush="#ddd" 
                    BorderThickness="1" 
                    CornerRadius="5">
                <ScrollViewer>
                    <StackPanel Margin="10">
                        <TextBlock Text="Order Details"
                                 FontSize="18"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,10"/>

                        <ItemsControl ItemsSource="{Binding SelectedOrderDetails}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,0,0,10" 
                                            Background="White"
                                            BorderBrush="#ddd"
                                            BorderThickness="1"
                                            CornerRadius="5"
                                            Padding="10">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Product Details -->
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel>
                                                    <TextBlock Text="{Binding Product.Name}" 
                                                             FontWeight="SemiBold"/>
                                                    <TextBlock>
                                                        <Run Text="Quantity: "/>
                                                        <Run Text="{Binding Quantity}"/>
                                                        <Run Text=" x "/>
                                                        <Run Text="{Binding UnitPrice, StringFormat=C}"/>
                                                    </TextBlock>
                                                    <TextBlock>
                                                        <Run Text="Total: "/>
                                                        <Run Text="{Binding TotalPrice, StringFormat=C}"
                                                             FontWeight="SemiBold"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Grid>

                                            <!-- Feedback Section -->
                                            <Expander Grid.Row="1" 
                                                      Header="Add Feedback"
                                                      Margin="0,10,0,0">
                                                <Grid Margin="0,10,0,0">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <!-- Rating -->
                                                    <StackPanel Grid.Row="0" 
            Orientation="Horizontal"
            Margin="0,0,0,10">
                                                        <TextBlock Text="Rating: " 
               VerticalAlignment="Center"/>
                                                        <TextBox Width="50"
             Text="{Binding SelectedRating, UpdateSourceTrigger=PropertyChanged}"
             PreviewTextInput="NumberValidationTextBox" 
             PreviewKeyDown="RatingTextBox_PreviewKeyDown"
                                                                 TextChanged="RatingTextBox_TextChanged"/>
                                                    </StackPanel>

                                                    <TextBox Grid.Row="1"
         Height="60"
         TextWrapping="Wrap"
         AcceptsReturn="True"
         Text="{Binding DataContext.FeedbackComment, RelativeSource={RelativeSource AncestorType=Window}, UpdateSourceTrigger=PropertyChanged}"
         Margin="0,0,0,10"/>

                                                    <!-- Submit Button -->
                                                    <Button Grid.Row="2"
                                                            Content="Submit Feedback"
                                                            Command="{Binding DataContext.SubmitFeedbackCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Width="120"
                                                            HorizontalAlignment="Right"/>
                                                </Grid>
                                            </Expander>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>