<Window x:Class="SPSS.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SPSS.WPF"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="700"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#f5f5f5">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="MenuItem">
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="ProductCardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PaginationButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#BDBDBD"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AddToCartButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#388E3C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ViewDetailsButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        CornerRadius="5"
                        Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- New Styles for Search and Filter -->
        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="5"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Menu -->
        <Menu Background="#2196F3" Margin="0,0,0,0" Height="50" VerticalAlignment="Top">
            <MenuItem Header="Home" Style="{StaticResource MenuButtonStyle}" Click="MenuItem_Click"/>
            <MenuItem Header="View Order History" Style="{StaticResource MenuButtonStyle}" Click="MenuItem_Click_1"/>
            <MenuItem Header="Log out" Style="{StaticResource MenuButtonStyle}" Click="MenuItem_Click_2"/>
            

        </Menu>

        <!-- Main Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,50,0,0">
            <StackPanel Margin="20">
                <!-- Welcome Message -->
                <TextBlock Text="{Binding WelcomeMessage}"
                           FontSize="24"
                           FontWeight="SemiBold"
                           Foreground="#2196F3"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,30"/>

                <!-- Search and Filter Section -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search Box -->
                    <TextBox Grid.Column="0"
                             Height="40"
                             Style="{StaticResource SearchBoxStyle}"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             VerticalAlignment="Center">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <!-- Category Filter -->
                    <ComboBox Grid.Column="2"
                              Style="{StaticResource ComboBoxStyle}"
                              ItemsSource="{Binding Categories}"
                              SelectedItem="{Binding SelectedCategory}"
                              DisplayMemberPath="Name"
                              VerticalAlignment="Center">
                        <ComboBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </ComboBox.Resources>
                    </ComboBox>
                </Grid>

                <!-- Product List -->
                <ItemsControl ItemsSource="{Binding PagedProducts}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource ProductCardStyle}"
                                    Margin="10,10,20,20"
                                    Width="220"
                                    Height="320"
                                    Padding="20">
                                <StackPanel>
                                    <!-- Product Name -->
                                    <TextBlock Text="{Binding Name}"
                                             FontSize="16"
                                             FontWeight="SemiBold"
                                             TextWrapping="Wrap"
                                             Margin="0,0,0,10"/>

                                    <!-- Category -->
                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <TextBlock Text="Category: "
                                                 Foreground="#757575"
                                                 FontSize="14"/>
                                        <TextBlock Text="{Binding Category}"
                                                 FontSize="14"/>
                                    </StackPanel>

                                    <!-- Price -->
                                    <TextBlock Text="{Binding Price, StringFormat=C}"
                                             FontSize="20"
                                             FontWeight="Bold"
                                             Foreground="#2196F3"
                                             Margin="0,10"/>

                                    <!-- Stock -->
                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <TextBlock Text="In Stock: "
                                                 Foreground="#757575"
                                                 FontSize="14"/>
                                        <TextBlock Text="{Binding Stock}"
                                                 FontSize="14"/>
                                    </StackPanel>

                                    <!-- Rating -->
                                    <!--<StackPanel Orientation="Horizontal"
                                              HorizontalAlignment="Center"
                                              Margin="0,10">
                                        <TextBlock Text="{Binding Rating, StringFormat={}{0:F1}}"
                                                 FontSize="16"
                                                 FontWeight="SemiBold"/>
                                        <TextBlock Text=" ★"
                                                 FontSize="16"
                                                 Foreground="#FFC107"
                                                 Margin="2,0,0,0"/>
                                    </StackPanel>-->
                                    <!-- View Details Button -->
                                    <Button Content="View Details"
                                        Style="{StaticResource ViewDetailsButtonStyle}"
                                        Margin="0,0,0,5"
                                          Command="{Binding DataContext.ViewDetailProduct, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"/>  
                                    <!-- Add to Cart Button -->
                                    <Button Content="Add to Cart"
                                            Style="{StaticResource AddToCartButtonStyle}"
                                            Margin="0,10,0,0"
                                            Command="{Binding DataContext.AddToCartCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Pagination -->
                <StackPanel Orientation="Horizontal"
                          HorizontalAlignment="Center"
                          Margin="0,20,0,40">
                    <Button Content="Previous"
                            Style="{StaticResource PaginationButtonStyle}"
                            Margin="10,0"
                            Command="{Binding PreviousPageCommand}"
                            IsEnabled="{Binding CanGoPrevious}"/>

                    <TextBlock Text="{Binding CurrentPageDisplay}"
                             FontSize="16"
                             VerticalAlignment="Center"
                             Margin="20,0"/>

                    <Button Content="Next"
                            Style="{StaticResource PaginationButtonStyle}"
                            Margin="10,0"
                            Command="{Binding NextPageCommand}"
                            IsEnabled="{Binding CanGoNext}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>