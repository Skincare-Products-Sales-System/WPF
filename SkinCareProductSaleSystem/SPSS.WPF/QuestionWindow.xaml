<Window x:Class="SPSS.WPF.QuestionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SPSS.WPF"
        mc:Ignorable="d"
        Title="Skin Type Analysis" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Skin Type Analysis Quiz" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,20,0,20"/>

        <!-- Progress Section -->
        <StackPanel Grid.Row="1" Margin="20,0,20,20">
            <TextBlock Text="{Binding ElementName=progressBarQuest, Path=Value, StringFormat={}{0:0}% Complete}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,5"/>
            <ProgressBar x:Name="progressBarQuest" 
                        Height="10" 
                        Maximum="100"
                        Background="#E0E0E0"
                        Foreground="#4CAF50"/>
        </StackPanel>

        <!-- Question Content -->
        <Border Grid.Row="2" 
                Background="#F5F5F5" 
                Margin="20,0,20,20" 
                CornerRadius="8" 
                Padding="20">
            <StackPanel>
                <TextBlock x:Name="textblockQuestion" 
                          FontSize="18" 
                          TextWrapping="Wrap" 
                          Margin="0,0,0,20"/>

                <StackPanel x:Name="optionsPanel" Margin="0,10">
                    <RadioButton x:Name="radioButtonA" 
                               GroupName="Options" 
                               Margin="0,10" 
                               Click="Option_Click"
                               Style="{StaticResource {x:Type RadioButton}}"/>
                    <RadioButton x:Name="radioButtonB" 
                               GroupName="Options" 
                               Margin="0,10" 
                               Click="Option_Click"
                               Style="{StaticResource {x:Type RadioButton}}"/>
                    <RadioButton x:Name="radioButtonC" 
                               GroupName="Options" 
                               Margin="0,10" 
                               Click="Option_Click"
                               Style="{StaticResource {x:Type RadioButton}}"/>
                    <RadioButton x:Name="radioButtonD" 
                               GroupName="Options" 
                               Margin="0,10" 
                               Click="Option_Click"
                               Style="{StaticResource {x:Type RadioButton}}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Navigation Buttons -->
        <Grid Grid.Row="3" Margin="20,0,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnPrevious" 
                    Content="Previous" 
                    Grid.Column="0"
                    Click="Previous_Click" 
                    Width="120" 
                    Height="40"
                    Style="{StaticResource {x:Type Button}}"/>

            <Button x:Name="btnSubmit" 
                    Content="Submit" 
                    Grid.Column="1"
                    Click="Submit_Click" 
                    Width="120" 
                    Height="40"
                    Visibility="Collapsed"
                    Style="{StaticResource {x:Type Button}}"/>

            <Button x:Name="btnNext" 
                    Content="Next" 
                    Grid.Column="2"
                    Click="Next_Click" 
                    Width="120" 
                    Height="40"
                    Style="{StaticResource {x:Type Button}}"/>
        </Grid>
    </Grid>
</Window>