<Window x:Class="SPSS.WPF.QuantitySelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Quantity"
        Height="350"
        Width="350"
        WindowStartupLocation="CenterScreen"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#F5F5F5" 
                Grid.Row="0"
                Padding="20,15">
            <TextBlock Text="Select Quantity"
                     FontSize="18"
                     FontWeight="SemiBold"/>
        </Border>

        <!-- Content -->
        <StackPanel Grid.Row="1" 
                    Margin="20,20,20,0" Height="183" VerticalAlignment="Top">
            <TextBlock Text="Available in stock:"
                     Margin="0,0,0,5"/>
            <TextBlock Text="{Binding MaxQuantity, StringFormat='{}{0} items'}"
                     FontWeight="SemiBold"
                     Margin="0,0,0,15"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,10">
                <Button Content="-"
                        Width="40"
                        Height="40"
                        FontSize="16"
                        Click="DecreaseQuantity_Click"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
                <TextBox Text="{Binding SelectedQuantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                     Width="60"
                     Height="40"
                     TextAlignment="Center"
                     VerticalContentAlignment="Center"
                     FontSize="16"
                     PreviewTextInput="QuantityTextBox_PreviewTextInput"/>

                <Button Content="+"
                        Width="40"
                        Height="40"
                        FontSize="16"
                        Click="IncreaseQuantity_Click"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
            </StackPanel>

            <!-- Error Message -->
            <TextBlock Text="{Binding ErrorMessage}"
                     Foreground="Red"
                     TextWrapping="Wrap"
                     Margin="0,10,0,0"
                     Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </StackPanel>

        <!-- Footer -->
        <Border Background="#F5F5F5"
                Grid.Row="2"
                Padding="20,15">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="Cancel"
                        Width="90"
                        Height="40"
                        Margin="0,0,10,0"
                        Click="Cancel_Click"/>
                <Button Content="Add to Cart"
                        Width="110"
                        Height="40"
                        Background="#007BFF"
                        Foreground="White"
                        Click="Confirm_Click"
                        IsEnabled="{Binding IsValid}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>